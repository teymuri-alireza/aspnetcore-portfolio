@model MyPortfolio.Models.Entities.Coffee;

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutCoffeeShop";
}

<h1>Create</h1>

<form asp-action="Create" asp-controller="CoffeeShop" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label>Category</label>
        <select asp-for="Type" >
            <option>Hot</option>
            <option>Iced</option>
        </select>
    </div>

    <div class="form-group">
        <label>Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit">Save</button>
</form>
