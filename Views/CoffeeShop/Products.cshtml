@model IEnumerable<MyPortfolio.Models.Entities.Coffee>

@{
    ViewData["Title"] = "Products";
    Layout = "_LayoutCoffeeShop";
}

@section css {
    <link rel="stylesheet" asp-append-version="true" href="~/css/CoffeeShop/products.css" />
}

@section HeroSection {
    <h2 class="text-center" style="margin-top:10px;">محصولات</h2>

}

<!-- delete alert -->
@if (TempData["itemDeletesuccess"]?.ToString() != null)
{
    <div class="alert alert-success" role="alert" id="delete-alert">
    @TempData["itemDeletesuccess"]
    </div>
}
@if (TempData["itemNotFound"]?.ToString() != null)
{
    <div class="alert alert-danger" role="alert" id="delete-alert">
    @TempData["itemNotFound"]
    </div>
}

<!-- main content -->
<div class="container">
    <span style="margin:25px;"></span>
    @if (Model == null || !Model.Any())
    {
        <p>هیچ کالایی یافت نشد.</p>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <partial name="Partials/_CoffeeProductPartial" model="@item" />
                </div>
                @if ((Model.ToList().IndexOf(item) + 1) % 4 == 0)
                {
                    <div class="row"></div>
                }
            }
        </div>
    }
</div>

<hr />
<div class="hero-text" style="margin: 15px;">
    <h4>ایجاد کالای جدید</h4>
    <p>
        به علت نمونه بودن این سایت برای رزومه، ساخت کالای جدید بلامانع است.
    </p>
    <a class="btn btn-primary" asp-action="Create" asp-controller="CoffeeShop">ساخت کالای جدید</a>
</div>

@section scripts{
    <script src="~/js/CoffeeShop/products.js"></script>
}