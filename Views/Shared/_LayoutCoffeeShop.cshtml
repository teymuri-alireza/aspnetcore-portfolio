<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" asp-append-version="true" href="~/css/CoffeeShop/site.css" />
    @await RenderSectionAsync("style", required:false)
</head>
<body>
    <header>
        <nav class="nav">
        <div class="brand">
            <div class="bean">☕</div>
            <div>
            <div>کافه قهوه</div>
            <small style="color: var(--muted);">ساده، خاص، معطر</small>
            </div>
        </div>
        <button class="menu-toggle" id="menuToggle">منو</button>
        <div class="nav-links" id="navLinks">
            <a asp-action="Index" asp-controller="CoffeeShop" class="active">خانه</a>
            <a href="#about">درباره</a>
            <a href="#menu">منو</a>
            <a href="#specials">تخصص‌ها</a>
            <a href="#reserve">رزرو</a>
        </div>
        <a class="btn secondary" href="#reserve">رزرو آنلاین</a>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-inner">
        <div>
            <div class="brand" style="gap:8px;">
            <div class="bean">☕</div>
            <div>
                <div style="color:var(--text); font-weight:700;">کافه قهوه</div>
                <small>لحظه‌ای گرم در دل شهر</small>
            </div>
            </div>
        </div>
        <div>
            <div style="color:var(--text); font-weight:700;">دسترسی سریع</div>
            <div class="features" style="margin-top:8px;">
            <a asp-action="Index" asp-controller="CoffeeShop" class="pill">خانه</a>
            <a href="#menu" class="pill">منو</a>
            <a href="#reserve" class="pill">رزرو</a>
            </div>
        </div>
        <div>
            <div style="color:var(--text); font-weight:700;">دنبال کنید</div>
            <div class="social">
            <a href="#" aria-label="Instagram">اینستاگرام</a>
            <a href="#" aria-label="Telegram">تلگرام</a>
            <a href="#" aria-label="Whatsapp">واتساپ</a>
            </div>
        </div>
        </div>
    </footer>

    <button class="floating-btn" id="toTop" aria-label="بازگشت به بالا">↑</button>

    <script src="~/js/Coffeeshop/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("script", required:false)
</body>
</html>

