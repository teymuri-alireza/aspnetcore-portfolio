<!DOCTYPE html>

<html dir="rtl" lang="fa">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["title"] - Coffee Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" asp-append-version="true" href="~/css/CoffeeShop/site.css" />
    @await RenderSectionAsync("css", required:false)
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar">
            <ul>
                <li><a class="navbar-links" title="Home" asp-controller="CoffeeShop" asp-action="Index">خانه</a></li>
                <li><a class="navbar-links" title="Products" asp-controller="CoffeeShop" asp-action="Products">محصولات</a></li>
                <li><a class="navbar-links" title="Contact" asp-controller="CoffeeShop" asp-action="Contact">تماس با ما</a></li>
                <li><a class="navbar-links" title="Privacy" asp-controller="CoffeeShop" asp-action="Privacy">سیاست حفظ حریم خصوصی</a></li>
            </ul>
            <div class="logo">کافه قهوه</div>
        </nav>
    </header>
    <!-- Hero Section -->
    <section class="hero">
        @await RenderSectionAsync("HeroSection", required: false)
    </section>
    <div>
        @RenderBody()
    </div>
    <!-- Footer -->
    <footer>
        این یک سایت نمونه برای رزومه میباشد.
        <a class="navbar-links" style="text-decoration:underline;margin-right:20px;" title="Privacy" asp-controller="CoffeeShop" asp-action="Privacy">سیاست حفظ حریم خصوصی</a>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
